@page "/journal"
@layout TestLayout

@inject MoodNest.Data.AppDbContext Db
@inject NavigationManager Nav

@using System.Text.RegularExpressions

<div class="journal-list-page">

    <div class="list-header">
        <div>
            <h2>Journal Entries</h2>
            <p class="subtitle">Browse and revisit your past reflections</p>
        </div>
        <span class="sort-indicator">
            Sorted by <strong>Latest first</strong>
        </span>
    </div>

    <div class="timeline">

        @foreach (var entry in Entries)
        {
            <div class="timeline-entry">

                <!-- CLICKABLE CONTENT -->
                <div class="timeline-main clickable"
                     @onclick="() => OpenEntry(entry.Id)">

                    <div class="timeline-date">
                        <span class="day">@entry.CreatedAt.Day</span>
                        <span class="month">@entry.CreatedAt.ToString("MMM").ToUpper()</span>
                    </div>

                    <div class="timeline-content">
                        <h4>@(entry.Title ?? "Untitled Entry")</h4>
                        <p>@GetPreview(entry.ContentHtml)</p>
                    </div>

                    <div class="timeline-mood">
                        @entry.PrimaryMood
                    </div>
                </div>

                <!-- ACTIONS -->
                <div class="timeline-actions">
                    <button class="edit-btn"
                            @onclick="() => EditEntry(entry.Id)">
                        Edit
                    </button>

                    <button class="delete-btn"
                            @onclick="() => DeleteEntry(entry.Id)">
                        Delete
                    </button>
                </div>
            </div>
        }

    </div>
</div>

@code {

    private List<MoodNest.Components.Model.JournalEntry> Entries = new();

    protected override void OnInitialized()
    {
        Entries = Db.JournalEntries
            .OrderByDescending(e => e.CreatedAt)
            .ToList();
    }

    private void OpenEntry(int id)
    {
        Nav.NavigateTo($"/journal/{id}");
    }

    private void EditEntry(int id)
    {
        Nav.NavigateTo($"/journaltoday/{id}");
    }

    private void DeleteEntry(int id)
    {
        var entry = Db.JournalEntries.FirstOrDefault(e => e.Id == id);
        if (entry == null) return;

        Db.JournalEntries.Remove(entry);
        Db.SaveChanges();

        Entries.Remove(entry);
    }

    private string GetPreview(string html)
    {
        html = Regex.Replace(html, "<h[1-6][^>]*>.*?</h[1-6]>", "",
            RegexOptions.IgnoreCase | RegexOptions.Singleline);

        html = Regex.Replace(html, "<.*?>", "");
        html = html.Trim();

        return html.Length > 120 ? html[..120] + "â€¦" : html;
    }
}
